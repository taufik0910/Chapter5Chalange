<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment2.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/itim"
        android:gravity="center"
        android:text="@string/homepage1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/itim"
        android:textColor="@color/white"
        android:textSize="0sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="nama1" />

    <ImageView
        android:id="@+id/img_image1"
        android:layout_width="169dp"
        android:layout_height="159dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/img_page1"
        android:src="@drawable/landing_page1" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/itim"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="nama1" />

    <ImageView
        android:id="@+id/img_image2"
        android:layout_width="169dp"
        android:layout_height="159dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/img_page1"
        android:src="@drawable/landing_page2" />

    <TextView
        android:id="@+id/tv_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/itim"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="nama2" />


</LinearLayout>